<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vue1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/OrangeRed"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Urgent et important" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A faire" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tâches restantes :" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:layout_marginLeft="50dp"
                        android:id="@+id/donut1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_progress="30"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vue2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/Orange"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Urgent et non important" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A déléguer" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tâches restantes :" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:layout_marginLeft="50dp"
                        android:id="@+id/donut2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_progress="30"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vue3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/LimeGreen"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Non urgent et important" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A planifier" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tâches restantes :" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:layout_marginLeft="50dp"
                        android:id="@+id/donut3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_progress="30"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vue4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/Gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Non urgent et non important" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A éliminer" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tâches restantes :" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:layout_marginLeft="50dp"
                        android:id="@+id/donut4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_progress="30"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="100dp"
            android:id="@+id/fab"
            app:rippleColor="@color/Blue"
            app:fabSize="normal"
            android:src="@drawable/ic_settings_black_24dp"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>